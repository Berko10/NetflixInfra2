apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: netflix-frontend  # Replace with netflix-movie-catalog for the second app
  namespace: argocd       # Ensure this is the namespace where ArgoCD is installed
spec:
  project: default        # The project within ArgoCD, typically 'default'
  source:
    repoURL: 'https://github.com/YourOrg/NetflixInfra'  # Your Git repository URL
    targetRevision: HEAD  # The branch or tag to use (e.g., main, master)
    path: 'k8s/NetflixFrontend'  # Path within the repo for the netflix-frontend manifests
  destination:
    server: 'https://kubernetes.default.svc'  # Kubernetes API server URL
    namespace: netflix-frontend  # Namespace to deploy the app
  syncPolicy:
    automated:
      prune: true       # Automatically delete resources that are no longer defined
      selfHeal: true    # Automatically sync when there is drift
